<style>

.BunnyLogo {
    border-radius: 100%;
}

.Middleflex {
    display: flex;
    flex-wrap: nowrap;
}

.Bunnytext {
    text-align: center;
}

.Middleflex > div {
    padding: 2%;
    text-align: center;
}

.item1 { grid-area: Top; }
.item2 { grid-area: Middle; }
.item3 { grid-area: Bottom; }

.grid-container {
  display: grid;
  grid-template-areas: 
  'Top'
  'Middle'
  'Bottom';
  padding: 10px;
}
.grid-item {
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 20px;
}





.container {
  position: relative;
  width: 50%;
}

.image {
  opacity: 1;
  display: block;
  width: 100%;
  height: auto;
  transition: .5s ease;
  backface-visibility: hidden;
}

.middle {
  transition: .5s ease;
  opacity: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%)
}

.container:hover .image {
  opacity: 0.3;
}

.container:hover .middle {
  opacity: 1;
}

.text {
  background-color: #2DB9F3;
  color: white;
  font-size: 16px;
  padding: 16px 32px;
}










</style>
